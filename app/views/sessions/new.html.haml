-provide(:title, "Sign in")
%h1 Sign in

.row
	.span6.offset3
		= form_for(:session, url: sessions_path) do |f|
			
			= f.label :email
			= f.text_field :email
			
			= f.label :password
			= f.password_field :password
			
			.center
				= f.submit "Sign in", class: "btn btn-large btn-green"
			
		%p
			New user?
			= link_to "Sign up now!", signup_path